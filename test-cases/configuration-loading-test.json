{
  "name": "Configuration Loading Test",
  "description": "Verify all JSON config files load from $HOME/.config/6510lsp",
  "setup": {
    "serverPath": "/Users/Ronald.Funk/My_Documents/source/gitlab/c64.nvim/6510lsp_server",
    "serverArgs": [],
    "rootPath": "/Users/Ronald.Funk/My_Documents/source/gitlab/c64.nvim/test-cases",
    "files": {
      "config_test.asm": ".const test = $1000\nlda #test\ninc $d020\nsin(1.0)"
    }
  },
  "testCases": [
    {
      "name": "mnemonic.json loads successfully",
      "description": "Verify mnemonic.json provides standard and illegal opcodes",
      "type": "completion",
      "input": {
        "file": "config_test.asm",
        "line": 1,
        "character": 0
      },
      "expected": {
        "containsItems": [{"label": "lda"}, {"label": "inc"}],
        "minItems": 40
      }
    },
    {
      "name": "kickass.json loads successfully",
      "description": "Verify kickass.json provides directives and functions",
      "type": "completion",
      "input": {
        "file": "config_test.asm",
        "line": 0,
        "character": 0
      },
      "expected": {
        "containsItems": [{"label": ".const"}],
        "minItems": 10
      }
    },
    {
      "name": "c64memory.json loads successfully",
      "description": "Verify c64memory.json provides memory addresses",
      "type": "completion",
      "input": {
        "file": "config_test.asm",
        "line": 2,
        "character": 8
      },
      "expected": {
        "containsItems": [{"label": "$D020"}],
        "minItems": 2
      }
    },
    {
      "name": "Built-in functions available",
      "description": "Verify built-in functions from kickass.json work",
      "type": "completion",
      "input": {
        "file": "config_test.asm",
        "line": 3,
        "character": 0
      },
      "expected": {
        "containsItems": [{"label": "sin"}],
        "minItems": 5
      }
    }
  ]
}