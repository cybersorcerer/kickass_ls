{
  "name": "Arithmetic Expression Evaluation Test",
  "description": "Test enhanced arithmetic expression evaluation (Phase 1.1)",
  "setup": {
    "serverPath": "/Users/Ronald.Funk/My_Documents/source/gitlab/c64.nvim/6510lsp_server",
    "serverArgs": [],
    "rootPath": "/Users/Ronald.Funk/My_Documents/source/gitlab/c64.nvim/test-cases",
    "files": {
      "arithmetic_test.asm": "@comprehensive-test.asm"
    }
  },
  "testCases": [
    {
      "name": "Basic arithmetic operations work",
      "description": "Test addition, multiplication, shift, and mask operations",
      "type": "diagnostics",
      "input": {
        "file": "arithmetic_test.asm"
      },
      "expected": {
        "maxErrors": 10,
        "maxWarnings": 15
      }
    },
    {
      "name": "Builtin function calls are recognized",
      "description": "Test abs, min functions are recognized and not flagged as errors",
      "type": "diagnostics",
      "input": {
        "file": "arithmetic_test.asm"
      },
      "expected": {
        "maxErrors": 0,
        "noUndefinedSymbolErrors": true
      }
    },
    {
      "name": "Complex expression completion works",
      "description": "Test completion in complex arithmetic expressions",
      "type": "completion",
      "input": {
        "file": "arithmetic_test.asm",
        "line": 10,
        "character": 8
      },
      "expected": {
        "containsItems": [{"label": "total"}],
        "minItems": 5
      }
    },
    {
      "name": "Hover shows calculated values",
      "description": "Test hover information for constants with arithmetic expressions",
      "type": "hover",
      "input": {
        "file": "arithmetic_test.asm",
        "line": 2,
        "character": 15
      },
      "expected": {
        "contains": "total"
      }
    }
  ]
}